# Real-Debrid WebDAV credentials
RD_WEBDAV_URL=https://dav.real-debrid.com
RD_USERNAME=your_username
RD_PASSWORD=your_api_key

# OMDb API key (get one free at https://www.omdbapi.com/apikey.aspx)
OMDB_API_KEY=your_omdb_api_key

# TMDB API key (get one free at https://www.themoviedb.org/settings/api)
# Used as fallback for foreign language title resolution
TMDB_API_KEY=your_tmdb_api_key

# Server settings
HOST=0.0.0.0
PORT=8080

# Cache TTL in seconds (how often to refresh the file listing from Real-Debrid)
CACHE_TTL=300
